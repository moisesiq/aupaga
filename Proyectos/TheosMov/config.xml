<?xml version='1.0' encoding='utf-8'?>
<widget id="com.garibaldi.theosmov" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Theos Mov</name>
    <description>
        Aplicación movil para acceder al sistema Theos
    </description>
    <author email="moises.deint@gmail.com" href="mailto:moises.deint@gmail.com">
        Moisés González
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-inappbrowser" spec="0.2.4" source="pgb" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/64_Garibaldi.png" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="www/img/64_Garibaldi.png" density="ldpi" />
        <icon src="www/img/64_Garibaldi.png" density="mdpi" />
        <icon src="www/img/64_Garibaldi.png" density="hdpi" />
        <icon src="www/img/64_Garibaldi.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
